<MudAppBar Color="Color.Tertiary" Elevation="2">
    @if (ShowMenuButton)
    {
        <MudIconButton Icon="@Icons.Material.Filled.Notes" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => OnButtonClick())"/>
    }

    <MudIcon Icon="@Icons.Custom.Uncategorized.Bacteria" Size="Size.Large"/>
    <MudSpacer/>
    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" Link="https://www.linkedin.com/in/murilo-nascimento-48b32b170/" Target="_blank"/>
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/Muchecha" Target="_blank"/>
</MudAppBar>

@code {

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    [Parameter]
    public bool ShowMenuButton { get; set; } = false;

    public async Task OnButtonClick() => await OnClickCallback.InvokeAsync();
}