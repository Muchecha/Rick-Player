@inherits LayoutComponentBase

@using Rick_Player.Main.Components

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar ShowMenuButton="true" OnClickCallback="DrawerToggle"/>

    <MudDrawer @bind-Open="_isDrawerOpen" Elevation="1" Variant="@DrawerVariant.Temporary" Anchor="Anchor.Start">
        <NavMenu />
    </MudDrawer>

    @if (Body is not null)
    {
        <MainContent Body="@Body" />
    }
</MudLayout>

@code {
    bool _isDrawerOpen = false;
    bool _isDarkMode = false;

    void DrawerToggle()
    {
        _isDrawerOpen = !_isDrawerOpen;
    }
}